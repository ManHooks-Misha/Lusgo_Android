<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/ToolbarTheme"
                android:background="@color/white"
                ripple:contentInsetStart="0dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:gravity="center"
                    android:text="Profil"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:textStyle="bold"
                    android:visibility="visible">

                </androidx.appcompat.widget.AppCompatTextView>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="50dp"
                    android:scaleType="centerCrop">

                </androidx.appcompat.widget.AppCompatImageView>

                <agency.tango.android.avatarview.views.AvatarView
                    android:id="@+id/pp_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="194dp"
                    android:src="@drawable/camera"
                    android:adjustViewBounds="true"
                    app:layout_constraintLeft_toLeftOf="@+id/pp"
                    app:layout_constraintTop_toTopOf="@+id/pp">

                </agency.tango.android.avatarview.views.AvatarView>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/pp_img">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/block1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/outline_button"
                    android:gravity="end"
                    android:padding="5dp"
                    android:src="@drawable/pencil2"
                    android:text="Blockera användare"
                    android:textColor="@color/material_red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    app:layout_constraintLeft_toRightOf="@id/pp_img"
                    app:layout_constraintTop_toTopOf="@+id/pp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/showblock"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:src="@drawable/pencil2"
                    android:text="Blockera användare"
                    android:textColor="@color/material_red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    app:layout_constraintLeft_toRightOf="@id/pp_img"
                    app:layout_constraintTop_toTopOf="@+id/pp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_member1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/outline_button"
                    android:gravity="end"
                    android:padding="5dp"
                    android:src="@drawable/pencil2"
                    android:text="Placera användaren även i ett annat Team"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    app:layout_constraintLeft_toRightOf="@id/pp_img"
                    app:layout_constraintTop_toTopOf="@+id/pp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_nm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:gravity="start"
                            android:text="Namn"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />
                    </LinearLayout>



                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editprofile_background"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/pencil2"
                        android:text="Redigera profil"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14sp"
                        android:textStyle="bold"

                        app:layout_constraintLeft_toRightOf="@id/pp_img"
                        app:layout_constraintTop_toTopOf="@+id/pp" />

                    <LinearLayout
                        android:id="@+id/ll_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/ll_nm">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:gravity="start"
                            android:text="Användarnamn"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:gravity="end"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="normal"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/ll_nm">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:gravity="start"
                            android:text="Roll"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_role"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="end"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="normal"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/ll_role">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:gravity="start"


                            android:text="E-Post"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_eml"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="end"

                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal"
                                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/email_verified"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/varifed" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/telePhoneView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/ll_email">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="start"
                            android:text="Telefonnummer"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="end"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="normal"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/mobile_verified"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/varifed" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/ll_email">

                        <View
                            android:id="@+id/v_call"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lighter_gray" />

                        <LinearLayout
                            android:id="@+id/ll_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_6dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/call"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="8dp"
                                android:gravity="start"
                                android:src="@drawable/call"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtcall"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:text="Ring upp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <View
                            android:id="@+id/v_msg"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lighter_gray" />

                        <LinearLayout
                            android:id="@+id/ll_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_6dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/message"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="8dp"
                                android:gravity="start"
                                android:src="@drawable/send_message"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtmessage"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:text="Skicka meddelande"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lighter_gray" />

                        <LinearLayout
                            android:id="@+id/ll_emails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_6dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/email"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="8dp"
                                android:gravity="start"
                                android:src="@drawable/send_email"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtemail"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:text="Skicka e-post"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lighter_gray" />

                        <LinearLayout
                            android:id="@+id/ll_add_member"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_6dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/add_img"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="8dp"
                                android:gravity="start"
                                android:src="@drawable/add_member"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/add_member"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:text="Placera användaren även i ett annat Team"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <View
                            android:id="@+id/v_add"

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lighter_gray" />

                        <LinearLayout
                            android:id="@+id/ll_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_6dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_block"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="8dp"
                                android:gravity="start"
                                android:src="@drawable/block"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/block"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:text="Blockera användare"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_unblock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:id="@+id/v_unblock"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lighter_gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_6dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="8dp"
                                android:gravity="start"
                                android:src="@drawable/block"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/unblock"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="start|center_vertical"
                                android:text="Avblockera användare"
                                android:textColor="@color/material_red"
                                android:textSize="@dimen/text_size_16sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lighter_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_changepass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"

                        app:layout_constraintTop_toBottomOf="@+id/ll_email">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/outline_button"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Ändra lösenord"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="normal"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_delete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/outline_button"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Radera konto"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="normal"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llcoach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/offwhite"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/ll_email">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_coach"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="start|bottom"
                            android:text="Team"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="end|bottom"
                            android:text="Teamleader namn"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


                    </LinearLayout>

                    <View
                        android:id="@+id/v1"

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/coachteam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/changepassword"
                        android:textColor="@android:color/white"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:textSize="@dimen/text_size_20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/team_opt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/offwhite"
                        android:gravity="center_vertical"

                        android:padding="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:gravity="start|bottom"
                            android:text="Team"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/roll"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="center|bottom"
                            android:text="Roll"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/opt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="end|bottom"
                            android:text="Alternativ"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                    </LinearLayout>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/changepassword"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_20sp"
                        android:textStyle="bold"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>