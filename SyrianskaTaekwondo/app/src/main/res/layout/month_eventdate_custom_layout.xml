<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calandar_event"
        android:elevation="50dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="6dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/viewline_curve"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summer Training "
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <ImageView
                        android:id="@+id/img_team"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/arrow"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_event_teamname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summer Training"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="Summer Training" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_event_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="Summer Training" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>