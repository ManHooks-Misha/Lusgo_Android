<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="84dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Kontaktuppgifter"
                android:textColor="@color/black"
                app:paddingStart="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:background="@drawable/new_back"

                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_back"
                    android:gravity="bottom"
                    android:hint="  Ange mobil"
                    android:inputType="number"
                    android:padding="5dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_back"
                    android:gravity="bottom"
                    android:hint="  Skriv in e-mail"
                    android:inputType="textEmailAddress"
                    android:padding="5dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_back"
                    android:gravity="bottom"
                    android:hint="  Gå in på webbplatsen"
                    android:inputType="text"
                    android:padding="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                android:orientation="vertical" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Om oss"
                android:textColor="@color/black"
                app:paddingStart="10dp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginEnd="10dp"

                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/new_back"
                android:gravity="bottom"
                android:hint="  Ange om USA"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                android:orientation="vertical" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Länk"
                android:textColor="@color/black"
                app:paddingStart="10dp" />

            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:background="#19747373" />
 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:background="@drawable/new_back"

                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/link_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_back"
                    android:gravity="bottom"
                    android:hint="  Ange länk"
                    android:padding="5dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/link_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_back"
                    android:gravity="bottom"
                    android:hint="  Ange länk"
                    android:padding="5dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/link_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_back"
                    android:gravity="bottom"
                    android:hint="  Ange länk"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                android:orientation="vertical" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Dokument"
                android:textColor="@color/black"
                app:paddingStart="10dp" />

            <!--    <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#19747373" />
    -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:background="@drawable/new_back"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doc"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/outline_button"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ladda upp dokument"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="text.docx"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="20sp"
        android:background="@drawable/create_button"
        android:gravity="center"
        android:text="Uppdatera information"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>