        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@drawable/outline_button"
        android:hint="förändra"
        android:id="@+id/txt"
        android:textStyle="bold"
        android:layout_height="40dp"/>-->
</LinearLayout>